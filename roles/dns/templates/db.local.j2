;
; BIND data file for local loopback interface
;
$TTL	10
@	IN	SOA	{{ hostname | mandatory }}. nobody.{{ auth_domain | mandatory }}. (
			      5		; Serial
			    600		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;

; Name servers
{{ auth_domain | mandatory }}.     IN      NS      {{ hostname | mandatory }}.

; A records for nameservers
kip                     IN      A       {{ syslog_ip | mandatory }}
; A record for nginx
schemas                 IN      A       {{ nginx_ip | mandatory }}
